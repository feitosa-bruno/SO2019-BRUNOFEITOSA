{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Active File",
			"linux": {
				"command": "gcc",
				"args": [
					// "-g",
					"${file}",
					// "-lm",
					"-lgmp",
					"-lmpfr",
					"-pthread",
					"-o",
					"${fileDirname}/${fileBasenameNoExtension}",
				],
				"options": {
					"cwd": "/usr/bin"
				},	
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		},
	]
}